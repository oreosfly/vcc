{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es6",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "./server",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
    ]
}